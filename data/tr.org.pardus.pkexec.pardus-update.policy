<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC "-//freedesktop//DTD polkit Policy Configuration 1.0//EN"
"http://www.freedesktop.org/software/polkit/policyconfig-1.dtd">
<policyconfig>

  <vendor>Pardus Developers</vendor>
  <vendor_url>https://www.pardus.org.tr</vendor_url>

  <action id="tr.org.pardus.pkexec.pardus-update-sysaction">
    <description>Pardus Update Authentication</description>
    <message>Authentication is required for Pardus Update</message>
    <message xml:lang="pt">A autenticação é necessária para a atualização do Pardus</message>
    <message xml:lang="tr">Pardus Güncelleyici için yetkilendirme gerekiyor</message>
    <icon_name>preferences-system</icon_name>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/share/pardus/pardus-update/src/SysActions.py</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>

  <action id="tr.org.pardus.pkexec.pardus-update-aptupdateaction">
    <description>Pardus Update Authentication</description>
    <message>Authentication is required for Pardus Update</message>
    <message xml:lang="pt">A autenticação é necessária para a atualização do Pardus</message>
    <message xml:lang="tr">Pardus Güncelleyici için yetkilendirme gerekiyor</message>
    <icon_name>preferences-system</icon_name>
    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/share/pardus/pardus-update/src/AutoAptUpdate.py</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>

  <action id="tr.org.pardus.pkexec.pardus-update-autoaptupgradeaction">
    <description>Pardus Update Authentication</description>
    <message>Authentication is required for Pardus Update</message>
    <message xml:lang="pt">A autenticação é necessária para a atualização do Pardus</message>
    <message xml:lang="tr">Pardus Güncelleyici için yetkilendirme gerekiyor</message>
    <icon_name>preferences-system</icon_name>
    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/share/pardus/pardus-update/src/AutoAptUpgrade.py</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>

  <action id="tr.org.pardus.pkexec.pardus-update-systemsettingswrite">
    <description>Pardus Update Authentication</description>
    <message>Authentication is required for Pardus Update</message>
    <message xml:lang="pt">A autenticação é necessária para a atualização do Pardus</message>
    <message xml:lang="tr">Pardus Güncelleyici için yetkilendirme gerekiyor</message>
    <icon_name>preferences-system</icon_name>
    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/share/pardus/pardus-update/src/SystemSettingsWrite.py</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>

  <action id="tr.org.pardus.pkexec.pardus-update-groupaction">
    <description>Pardus Software Center Authentication</description>
    <message>Authentication is required for Pardus Update</message>
    <message xml:lang="pt">A autenticação é necessária para a atualização do Pardus</message>
    <message xml:lang="tr">Pardus Güncelleyici için yetkilendirme gerekiyor</message>
    <icon_name>preferences-system</icon_name>
